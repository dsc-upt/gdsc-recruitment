@using GdscRecruitment.Features.Example
<MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
    <MudSpacer/>
    <LoginDisplay/>
</MudAppBar>

<MudDrawer Anchor="Anchor.Start" ClipMode="DrawerClipMode.Never" @bind-Open="@_open" Elevation="1" Variant="@DrawerVariant.Responsive">
    <MudDrawerHeader Class="d-flex flex-column">
        <MudText Typo="Typo.h6" Color="Color.Success">Recruitment App</MudText>
        <MudText Typo="Typo.body2" Class="mud-text-secondary" Color="Color.Secondary">Build good things together!</MudText>
    </MudDrawerHeader>

    <MudNavMenu Color="Color.Primary" Margin="Margin.Dense" Rounded="true" Class="mud-width-full" Bordered="true">
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="fas fa-house" IconColor="Color.Success">Home</MudNavLink>
        <MudNavLink Href="@ExampleRoutes.Examples" Icon="fas fa-server" IconColor="Color.Primary">Examples</MudNavLink>

        <MudNavGroup Title="Settings" Icon="fas fa-cogs" IconColor="Color.Primary">
            <MudNavLink Href="/users" Icon="fas fa-users" IconColor="Color.Primary">Users</MudNavLink>
            <MudNavLink Href="/security" Icon="fas fa-user-shield" IconColor="Color.Info">Security</MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudDrawer>

@code {
    private bool _open = true;

    void ToggleDrawer()
    {
        _open = !_open;
    }

}
