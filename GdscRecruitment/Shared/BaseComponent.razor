@using GdscRecruitment.Features.Users.Models
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using GdscRecruitment.Utilities
@inject UserManager<User> UserManager

@code {

    [CascadingParameter]
    private Task<AuthenticationState> AuthStateTask { get; set; } = null!;

    protected ClaimsPrincipal ClaimsPrincipal => AuthStateTask.Result.User;
    protected User? User => UserManager.GetUserAsync(ClaimsPrincipal).Result;
    protected bool IsAuthenticated => ClaimsPrincipal.Identity?.IsAuthenticated ?? false;
    protected bool IsAdmin => ClaimsPrincipal.IsInRole(Roles.Admin);

}
